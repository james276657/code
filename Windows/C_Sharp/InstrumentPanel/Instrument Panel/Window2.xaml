                <Rectangle Canvas.Left="0" Canvas.Top="50" Height="50" Name="temperatureRectangle1" Stroke="Black" Width="100" StrokeThickness="2" Fill="LightSteelBlue" />
            </Canvas>
            <Canvas Name="canvasBat" Height="100" HorizontalAlignment="Left" Margin="150,0,0,0" VerticalAlignment="Top" Width="100">
                <Rectangle Canvas.Left="0" Canvas.Top="0" Height="50" Name="batRectangle1" Stroke="Black" Width="100" StrokeThickness="2" Fill="LightSteelBlue" />
